<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://fuelTankDetailView.title"
      focusComponent="form">
    <data>
        <instance id="fuelTankDc"
                  class="com.svetkin.optrou.entity.FuelTank">
            <fetchPlan extends="_base"/>
            <loader id="fuelTankDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="fuelTankDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="numberField" property="number"/>
            <textField id="capacityField" property="capacity"/>
            <textField id="remainingFuelField" property="remainingFuel"/>
            <checkbox id="isEnabledField" property="isEnabled"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
