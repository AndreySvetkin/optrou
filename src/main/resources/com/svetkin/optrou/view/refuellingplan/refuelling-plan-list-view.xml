<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://refuellingPlanListView.title"
      focusComponent="refuellingPlansDataGrid">
    <data>
        <collection id="refuellingPlansDc"
                    class="com.svetkin.optrou.entity.RefuellingPlan">
            <fetchPlan extends="_base">
                <property name="trip" fetchPlan="_base"/>
                <property name="refuellings" fetchPlan="_base"/>
                <property name="refuellingsVolume"/>
                <property name="refuellingsSize"/>
            </fetchPlan>
            <loader id="refuellingPlansDl" readOnly="true">
                <query>
                    <![CDATA[select e from optrou_RefuellingPlan e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="refuellingPlansDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="refuellingPlansDataGrid.create"/>
            <button id="editButton" action="refuellingPlansDataGrid.edit"/>
            <button id="refreshButton" action="refuellingPlansDataGrid.refresh"/>
            <button id="removeButton" action="refuellingPlansDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="refuellingPlansDl"/>
        </hbox>
        <dataGrid id="refuellingPlansDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="refuellingPlansDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="refresh" type="list_refresh"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="trip"/>
                <column property="refuellingsVolume"/>
                <column property="refuellingsSize"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
